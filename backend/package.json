{
  "name": "backend",
  "version": "1.0.0",
  "description": "Provides real-time features for the No-Code scraping app",
  "main": "src/main.ts",
  "author": "Guillaume Patin",
  "license": "UNLICENSED",
  "scripts": {
    "prebuild": "rimraf dist",
    "build": "nest build",
    "start": "GOOGLE_APPLICATION_CREDENTIALS=./firestore-creds.json nest start",
    "start:dev": "GOOGLE_APPLICATION_CREDENTIALS=./firestore-creds.json nest start --watch",
    "start:prod": "GOOGLE_APPLICATION_CREDENTIALS=./firestore-creds.json node dist/main",
    "test": "NODE_ENV= jest --verbose --watch",
    "test:cov": "NODE_ENV= jest --coverage",
    "test-watch": "NODE_ENV= jest --verbose --watchAll",
    "test:debug": "NODE_ENV= node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "NODE_ENV= jest --config ./test/jest-e2e.json",
    "lint": "yarn run eslint src/* --fix --no-error-on-unmatched-pattern",
    "format": "prettier --config .prettierrc 'src/**/*.ts' --write"
  },
  "dependencies": {
    "@cucumber/microdata": "^2.0.0",
    "@google-cloud/firestore": "^5.0.2",
    "@nestjs/common": "^9.0.1",
    "@nestjs/core": "^9.0.1",
    "@nestjs/platform-express": "^9.0.1",
    "@nestjs/platform-socket.io": "^9.0.1",
    "@nestjs/websockets": "^9.0.1",
    "@types/node": "^18.0.3",
    "config": "^3.3.7",
    "express": "4",
    "file-system-cache": "^2.0.0",
    "firebase": "^9.8.3",
    "http": "^0.0.1-security",
    "jsdom": "^19.0.0",
    "lodash": "^4.17.21",
    "playwright-chromium": "^1.22.2",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.5.5",
    "schema-dts": "^1.1.0",
    "socket.io": "^4.5.1",
    "validator": "^13.7.0",
    "w3c-css-validator": "^1.2.1",
    "winston": "^3.8.1"
  },
  "devDependencies": {
    "@babel/preset-typescript": "^7.18.6",
    "@nestjs/cli": "^9.0.0",
    "@nestjs/schematics": "^9.0.1",
    "@nestjs/testing": "^9.0.1",
    "@types/config": "^0.0.41",
    "@types/express": "^4.17.13",
    "@types/jest": "^28.1.4",
    "@types/jsdom": "^16.2.14",
    "@types/supertest": "^2.0.12",
    "@types/validator": "^13.7.3",
    "@typescript-eslint/eslint-plugin": "^5.30.5",
    "@typescript-eslint/parser": "^5.30.5",
    "eslint": "^8.19.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "^28.1.2",
    "prettier": "^2.7.1",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.4",
    "ts-jest": "^28.0.5",
    "ts-loader": "^9.3.1",
    "ts-node": "^10.8.2",
    "tsconfig-paths": "^4.0.0",
    "typescript": "^4.7.4"
  }
}
